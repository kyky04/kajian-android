<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_medium">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:visibility="visible"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyt_expand_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/overlay_light_30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_account_balance"
                                android:tint="@color/grey_500" />

                            <EditText
                                android:id="@+id/et_mosque"
                                fontPath="fonts/montserrat_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:enabled="false"
                                android:hint="No Handphone"
                                android:inputType="number"
                                android:padding="@dimen/spacing_medium"
                                android:text="Masjid Marlina Bukhari"
                                android:textColor="@color/black_de" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/overlay_light_30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_place_black_24dp"
                                android:tint="@color/grey_500" />

                            <EditText
                                android:id="@+id/et_alamat"
                                fontPath="fonts/montserrat_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:gravity="top"
                                android:padding="@dimen/spacing_medium"
                                android:text="Pangkalan Kerinci Kota, Pangkalan Kerinci,Pelaluan Regency, Riau 28654, Indonesia " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/overlay_light_30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:padding="@dimen/spacing_medium"
                                android:src="@drawable/ic_map_black_24dp"
                                android:tint="@color/grey_500" />

                            <EditText
                                android:id="@+id/et_map"
                                fontPath="fonts/montserrat_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:gravity="top"
                                android:padding="@dimen/spacing_medium"
                                android:text="12 KM" />

                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>



</LinearLayout>

