        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="uinbdg.skirpsi.kajian.Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uinbdg.skirpsi.kajian.Activities.LoginActivity" />
        <activity android:name="uinbdg.skirpsi.kajian.Activities.MainActivity" />
        <activity android:name="uinbdg.skirpsi.kajian.Activities.DaftarActivity" />
        <activity android:name="uinbdg.skirpsi.kajian.Activities.KajianActivity" />
        <activity android:name="uinbdg.skirpsi.kajian.Activities.KajianByDateActivity" />

    </application>

</manifest>